        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "checkJs": false,
        "strict": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*",
            ],
        }
